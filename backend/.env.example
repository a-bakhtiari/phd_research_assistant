# PhD Research Assistant Backend Configuration

# API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=deepseek  # openai, anthropic, deepseek
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-sonnet-20240229
DEEPSEEK_MODEL=deepseek-chat

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=sqlite:///./data/phd_assistant.db

# Vector Store
VECTOR_STORE_PATH=./data/vector_store

# Embedding Configuration (OpenAI only - REQUIRED)
EMBEDDING_MODEL=text-embedding-3-small  # or text-embedding-3-large (better quality, 5x cost)
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_PATH=./data/embeddings_cache.db
EMBEDDING_BATCH_SIZE=64
EMBEDDING_MAX_RETRIES=5

# PDF Processing
ENABLE_LLM_PDF_CLEANING=true
PDF_PAGES_PER_CHUNK=4
PDF_MAX_RETRIES=3

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security (for future use)
SECRET_KEY=change_this_to_a_random_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=30
